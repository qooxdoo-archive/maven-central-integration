      <organizationUrl>http://qooxdoo.org</organizationUrl>
      <roles>
        <role>Developer</role>
      </roles>
      <timezone>+2</timezone>
    </developer>
  </developers>

  <issueManagement>
    <system>Bugzilla</system>
    <url>http://bugzilla.qooxdoo.org/</url>
